<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{20} [%M] - %msg%n}{FATAL=bright red, ERROR=red, WARN=yellow, INFO=blue, DEBUG=green, TRACE=bright blue}"/>
      <!--<PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{20} - %msg%n}{FATAL=bright red, ERROR=red, WARN=yellow, INFO=blue, DEBUG=green, TRACE=bright blue}"/>-->
      <param name="Encoding" value="UTF-8"/>
    </Console>
  </appenders>
  <loggers>
    <root level="TRACE">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</configuration>
